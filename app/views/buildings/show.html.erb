<section id="content">
  <article id="text">
    <h2>Vypis mistnosti pro budovu <%= @building.title%></h2>
    <table>
      <thead>
      <tr>
        <th>Title</th>
        <th>Code</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
       <% @building.rooms.each do |room| %>
        <tr>
          <td><%= room.tite %></td>
          <td><%= room.code %></td>
          <td><%= link_to 'rozvrh', pages_room_schedule_path(:room_id => room.id) %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>


    <%= link_to 'Edit', edit_building_path(@building) %>
    <%= link_to 'Back', buildings_path %>
    <%= link_to 'New Room', new_building_room_path(@building) %>
  </article>
</section>
<p id="notice"><%= notice %></p>
